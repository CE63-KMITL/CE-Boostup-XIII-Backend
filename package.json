{
     "name": "ce-boostup-xiii-backend",
     "version": "0.0.1",
     "description": "",
     "author": "CE63@KMITL",
     "private": true,
     "license": "MIT",
     "scripts": {
          "<--Main-->": "",
          "start:dev": "nest start --watch",
          "build > create-image > run": "npm-run-all stop-container create-image run-container",
          "add test data": "ts-node mock/init.ts",
          "<--Docker-->": "",
          "run-container": "echo 'Server running at : \u001b[32mhttp://localhost:3000\u001b[39m' && docker run -p 3000:3000 ce-boostup-xiii-backend",
          "stop-container": "docker ps -a --filter \"ancestor=ce-boostup-xiii-backend\" -q | xargs -r docker rm -f || true",
          "create-image": "docker build -t ce-boostup-xiii-backend .",
          "<--Nest-->": "",
          "start": "nest start",
          "start:debug": "nest start --debug --watch",
          "start:prod": "node dist/main",
          "build": "nest build",
          "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
          "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
          "test": "jest",
          "test:watch": "jest --watch",
          "test:cov": "jest --coverage",
          "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
          "test:e2e": "jest --config ./test/jest-e2e.json"
     },
     "dependencies": {
          "@liaoliaots/nestjs-redis": "^10.0.0",
          "@nest-lab/throttler-storage-redis": "^1.1.0",
          "@nestjs-modules/mailer": "^2.0.2",
          "@nestjs/bullmq": "^11.0.2",
          "@nestjs/common": "^11.1.1",
          "@nestjs/config": "^4.0.2",
          "@nestjs/core": "^11.1.1",
          "@nestjs/jwt": "^11.0.0",
          "@nestjs/passport": "^11.0.5",
          "@nestjs/platform-express": "^11.1.1",
          "@nestjs/swagger": "^11.2.0",
          "@nestjs/throttler": "^6.4.0",
          "@nestjs/typeorm": "^11.0.0",
          "@types/nodemailer": "^6.4.17",
          "@types/passport-jwt": "^4.0.1",
          "bcrypt": "^6.0.0",
          "bcryptjs": "^3.0.2",
          "bullmq": "^5.52.2",
          "class-transformer": "^0.5.1",
          "class-validator": "^0.14.2",
          "dotenv": "^16.5.0",
          "ioredis": "^5.6.1",
          "joi": "^17.13.3",
          "jsonwebtoken": "^9.0.2",
          "nodemailer": "^7.0.3",
          "passport": "^0.7.0",
          "passport-jwt": "^4.0.1",
          "pg": "^8.16.0",
          "reflect-metadata": "^0.2.2",
          "rxjs": "^7.8.2",
          "typeorm": "^0.3.24"
     },
     "devDependencies": {
          "@nestjs/cli": "^11.0.7",
          "@nestjs/schematics": "^11.0.5",
          "@nestjs/testing": "^11.1.1",
          "@types/bcrypt": "^5.0.2",
          "@types/bcryptjs": "^3.0.0",
          "@types/express": "^5.0.2",
          "@types/jest": "^29.5.14",
          "@types/jsonwebtoken": "^9.0.9",
          "@types/multer": "^1.4.12",
          "@types/node": "^22.15.18",
          "@types/supertest": "^6.0.3",
          "@typescript-eslint/eslint-plugin": "^8.32.1",
          "@typescript-eslint/parser": "^8.32.1",
          "eslint": "^9.27.0",
          "eslint-config-prettier": "^10.1.5",
          "eslint-plugin-prettier": "^5.4.0",
          "jest": "^29.7.0",
          "npm-run-all": "^4.1.5",
          "prettier": "^3.5.3",
          "source-map-support": "^0.5.21",
          "supertest": "^7.1.1",
          "ts-jest": "^29.3.4",
          "ts-loader": "^9.5.2",
          "ts-node": "^10.9.2",
          "tsconfig-paths": "^4.2.0",
          "typescript": "^5.8.3"
     },
     "jest": {
          "moduleFileExtensions": [
               "js",
               "json",
               "ts"
          ],
          "rootDir": "src",
          "testRegex": ".*\\.spec\\.ts$",
          "transform": {
               "^.+\\.(t|j)s$": "ts-jest"
          },
          "collectCoverageFrom": [
               "**/*.(t|j)s"
          ],
          "coverageDirectory": "../coverage",
          "testEnvironment": "node"
     },
     "pnpm": {
          "onlyBuiltDependencies": [
               "@nestjs/core",
               "@scarf/scarf",
               "bcrypt",
               "msgpackr-extract"
          ]
     }
}
